{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"skipFiles": ["<node_internals>/**"],
			"program": "${file}",
			"preLaunchTask": "tsc: build - tsconfig.json",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"]
		},
		{
			"type": "node-terminal",
			"name": "Debug Current TS Test File (ts-node)",
			"request": "launch",
			"command": "ts-node -- ${fileBasenameNoExtension}",
			"cwd": "${fileDirname}",
			"skipFiles": ["<node_internals>/**"]
		},
		{
			"type": "node-terminal",
			"name": "Debug app",
			"request": "launch",
			"command": "ts-node src/index.ts",
			"envFile": "${workspaceFolder}/config/.env.dev",
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
